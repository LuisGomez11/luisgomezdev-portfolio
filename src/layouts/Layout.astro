---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/images/LG_logo.jpg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <meta
      name="keywords"
      content="Luis Gómez, Software Developer, Web Developer, FullStack Developer, Angular, TypeScript, JavaScript, Java, Bootstrap, Desarrollador"
    />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://luisgomeza.vercel.app/" />
    <meta property="og:title" content="Luis Gómez | Portafolio" />
    <meta property="og:site_name" content="Luis Gómez | Portafolio" />
    <meta
      property="og:description"
      content="Bienvenidos a mi portafolio. Soy Luis Gómez, ingeniero de sistemas y desarrollador web con más de cuatro años de experiencia en el diseño, desarrollo y mantenimiento de aplicaciones web."
    />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://luisgomeza.vercel.app/" />
    <meta property="twitter:title" content="Luis Gómez | Portafolio" />
    <meta
      property="twitter:description"
      content="Bienvenidos a mi portafolio. Soy Luis Gómez, ingeniero de sistemas y desarrollador web con más de cuatro años de experiencia en el diseño, desarrollo y mantenimiento de aplicaciones web."
    />
  </head>
  <body class="text-gray-200 bg-gray-800">
    <Navbar />
    <main class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-22 mb-14 flex flex-col gap-20">
      <slot />
      <Fragment
        set:html={`
          <script type="module">
            import AOS from 'https://cdn.skypack.dev/aos';

            window.addEventListener('DOMContentLoaded', () => {
              AOS.init({
                once: true,
                duration: 1000,
                easing: 'ease-out',
              });
            });
          </script>
        `}
      />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @import 'tailwindcss';
  @import 'animate.css/animate.min.css';
  html,
  body {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
      sans-serif;
    box-sizing: border-box;
    scroll-behavior: smooth;
    background-image: url('/background.png');
    background-repeat: repeat;
  }

  a {
    box-sizing: border-box;
  }
</style>
